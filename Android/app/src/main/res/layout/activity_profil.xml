<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/retour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/retour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.5dp"
            android:text="Profil"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="20dp"
       android:orientation="vertical">
    <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:src="@drawable/userprofil"/>
        <ImageView
            android:id="@+id/editprofil"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:src="@drawable/edit" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/backgroundcard">

        <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/edittext"
                    android:hint="Details"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="22dp" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:id="@+id/img_nom"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:padding="5dp"
                           android:src="@drawable/name" />
                       <EditText
                           android:id="@+id/edt_name"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:hint="Name"
                           android:editable="false"
                           android:textSize="15dp" />

                 </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                       <ImageView
                          android:layout_width="40dp"
                          android:layout_height="40dp"
                          android:padding="10dp"
                          android:src="@drawable/mail" />
                     <EditText
                         android:id="@+id/edt_email"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Email"
                         android:inputType="textMultiLine"
                         android:lines="30"
                         android:minLines="2"
                         android:editable="false"
                         android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content">
                       <ImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:padding="10dp"
                         android:src="@drawable/info" />
                       <EditText
                         android:id="@+id/edt_info"
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:hint="Infos"
                           android:editable="false"
                         android:layout_marginBottom="15dp"
                         android:textSize="15dp" />
                </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          app:cardCornerRadius="5dp"
          app:cardElevation="2dp"
          android:layout_marginTop="20dp"
          android:background="@color/backgroundcard">

          <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
             android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/edittext"
            android:hint="Adress"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/localisation" />
            <EditText
                android:id="@+id/edt_adress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Adress"
                android:editable="false"
                android:layout_marginBottom="15dp"
                android:textSize="15dp" />
        </LinearLayout>
      </LinearLayout>
     </android.support.v7.widget.CardView>
     <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundcard">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:background="@color/edittext"
             android:hint="Contact"
             android:inputType="text"
             android:paddingLeft="10dp"
             android:singleLine="true"
             android:textSize="22dp" />

             <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content">
                 <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:padding="10dp"
                   android:src="@drawable/phone" />
                 <EditText
                   android:id="@+id/edt_phone"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:hint="phone numbers"
                     android:editable="false"
                   android:textSize="15dp" />
              </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:padding="10dp"
                   android:src="@drawable/linkedin" />
                <EditText
                   android:id="@+id/edt_linkdin"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:hint="Adress Linkedin"
                    android:layout_marginBottom="15dp"
                    android:editable="false"
                   android:textSize="15dp" />
              </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
   </LinearLayout>
</ScrollView>
</LinearLayout>