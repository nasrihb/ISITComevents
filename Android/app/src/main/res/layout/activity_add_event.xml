<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddEvent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/retour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/retour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.5dp"
            android:text="Add Event"
            android:textColor="@color/white"
            android:textSize="19dp" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edt_titre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Titre"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edt_date"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:hint="Date"
                    android:editable="false"
                    android:onClick="DatePicker"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edt_heuredeb"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:hint="Heure de debut"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:inputType="time"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edt_heurefin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:inputType="time"
                    android:hint="Heure de fin"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edt_lieu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:hint="Lieu"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />
                <Spinner
                    android:id="@+id/responsable"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Responsable"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:id="@+id/edt_des"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:hint="DÃ©scription"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:minLines="2"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:scrollbars="vertical"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/addevent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp"
                    android:textAllCaps="false"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:text="Add Event"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>